@using WarmaHordes.Models
@model UserProfileViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")

    @Scripts.Render("~/bundles/signalr")
    @*Reference the autogenerated SignalR hub script.*@
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/signalrHubs")

    @*Render the page-specific JS last so it benefits from the included bundles, SignalRHubs, etc*@
    @RenderSection("Scripts", false)
</head>

<body>
    @Html.Partial("Navbar")
    <div class="col-md-12">
        <div id="toolbarLeft" class="container navbar navbar-left col-md-2">
            <h3>Tokens</h3>
            <div class="row">
                <div class="input-group">
                    <input id="txtTokenName" type="text" class="form-control" placeholder="Select a Token to Add" disabled />
                    <div class="input-group-btn">
                        <button id="btnTokenMenu" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Small <span class="caret"></span></button>
                        <ul id="tokenSizeMenu" class="dropdown-menu">
                            <li id="tokenMenuSmall">
                                <a href="#">Small</a>
                            </li>
                            <li id="tokenMenuMedium">
                                <a href="#">Medium</a>
                            </li>
                            <li id="tokenMenuLarge">
                                <a href="#">Large</a>
                            </li>
                            <li id="tokenMenuHuge">
                                <a href="#">Huge</a>
                            </li>
                        </ul>
                    </div>
                    <span class="input-group-btn">
                        <button id="btnCreateToken" class="btn btn-success" type="button">Create</button>
                    </span>
                </div>
            </div>
            <div class="row">
                <div id="tokenWindowDiv">
                    <ul class="list-group" id="tokenWindow">
                        @if (ViewBag.Tokens != null)
                        {
                            foreach (TokenViewModel token in ViewBag.Tokens)
                            {
                                <li class="list-group-item" id="@token.Id" onmousedown="handleSelectToken('@token.Id')">
                                    <div class="row">
                                        <div class="col-md-8" id="name_@token.Id">@token.Name</div>
                                        <div class="col-md-4">
                                            <img id="img_@token.Id" class="img-circle" style="height: 100%; width: 100%;" src="@token.ImageUri" alt="@token.Name" />
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="container body-content col-md-8">
            @RenderBody()
        </div>

        @*
            <div id="toolbarRight" class="container navbar navbar-right col-md-2">
                <hr />
                <h3>Placeholder</h3>
                <hr />
            </div>
        *@
    </div>

    <div id="botNavBar" class="navbar navbar-inverse navbar-fixed-bottom" style="height: 20%;">
        <div class="col-md-2 pull-left">
            <div class="row">
                <div class="form-inline col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon" style="width: 10%;">
                                <img src="~/Content/Icons/Computer-Hardware-Keyboard-icon.png" style="height: 20px; width: 20px" />
                            </div>
                            <input type="text" class="form-control" id="message" placeholder="Message to Send">
                            <span class="input-group-btn" style="width: 25%">
                                <input type="button" class="btn btn-primary" style="width: 100%" id="sendmessage" value="Send" tabindex="-1" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-inline col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon" style="width: 10%;">
                                <img src="~/Content/Icons/Gaming-Dice-icon.png" style="height: 20px; width: 20px" />
                            </div>
                            <input type="number" pattern="[0-9]*" min="1" max="5" inputmode="numeric" class="form-control" id="messageLog" placeholder="Number of Dice">
                            <span class="input-group-btn" style="width: 25%">
                                <input type="button" class="btn btn-primary" style="width: 100%" id="sendLogMessage" value="Roll" tabindex="-1" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="padding-top: 5px;">
                <div class="col-md-5">
                    <div id="avatarDiv" class="btn btn-default btn-file thumbnail">
                        <img id="imgAvatar" src="@Model.ProfileImage" />
                    </div>
                    <!--
                    <div id="avatarDiv" class="btn btn-default btn-file thumbnail">
                        <span id="avatarBtnText">Avatar</span>
                        @*<span hidden id="avatarBtnText">Avatar</span>*@
                        <input id="inputAvatar" type="file">
                        @*<img id="imgAvatar" style="display: none;" src="@Model.ProfileImage" />*@
                        @*<img id="avatarImg" src="~/Content/Misc/Me.jpg" />*@
                    </div>
                    -->
                </div>

                <div class="form-inline col-md-7 row">
                    <div class="form-group" style="width: 110%;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="txtUsername" placeholder="Name" value="@Model.Name">
                            <span class="input-group-btn">
                                <input type="button" class="btn btn-info" id="sendLogMessage" value="Set" tabindex="-1" />
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-inline col-md-7 row">
                    <div class="form-group" style="width: 110%;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="txtColor" placeholder="Color">
                            <span class="input-group-btn">
                                <input type="button" class="btn btn-info" id="sendLogMessage" value="Set" tabindex="-1" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-10 pull-right">
            <div id="logWindowDiv" class="col-md-6 pull-right" style="height: auto; max-height: 200px; overflow: auto;">
                <ul class="list-group" disabled id="logWindow"></ul>
            </div>

            <div id="chatWindowDiv" class="col-md-6 pull-right" style="height: auto; max-height: 200px; overflow: auto;">
                <ul class="list-group" disabled id="chatWindow"></ul>
            </div>
        </div>
    </div>
</body>
</html>